<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cartCard"
    android:layout_width="match_parent"
    android:layout_marginTop="4sp"
    android:layout_marginBottom="4sp"
    android:layout_marginStart="6sp"
    android:layout_marginEnd="6sp"
    android:layout_gravity="center"
    android:elevation="6sp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:background="@android:color/white" tools:targetApi="lollipop">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:padding="8dp"
        android:textAlignment="viewStart">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxHeight="52dp"
            android:maxWidth="286dp"
            android:text="@string/colgate_herbal_200ml"
            android:textColor="@color/textDark"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/descriptionItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:maxHeight="52dp"
            android:maxWidth="286dp"
            android:paddingBottom="8dp"
            android:paddingEnd="0dp"
            android:paddingStart="1dp"
            android:paddingTop="4dp"
            android:text="@string/description_description_description_description_description"
            android:textAlignment="textStart"
            app:layout_constraintBottom_toTopOf="@id/textView3"
            app:layout_constraintEnd_toStartOf="@id/removeItem"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_title" />

        <TextView
            android:id="@+id/txtUnitPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_20"
            android:paddingEnd="0dp"
            android:paddingStart="3dp"
            android:textAlignment="gravity"
            android:textColor="@color/textDark"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView3" />

        <Button
            android:id="@+id/removeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="removeItem"
            android:text="@string/remove"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kshs"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtUnitPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/descriptionItem" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>